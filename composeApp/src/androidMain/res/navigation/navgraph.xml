<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navgraph"
    app:startDestination="@id/boardingFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.samadtch.bilinguai.screens.auth.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/go_register"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/login"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.samadtch.bilinguai.screens.auth.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/go_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/register"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.samadtch.bilinguai.screens.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/logout"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/boardingFragment"
        android:name="com.samadtch.bilinguai.screens.boarding.BoardingFragment"
        android:label="fragment_boarding"
        tools:layout="@layout/fragment_boarding">
        <action
            android:id="@+id/start_login"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/boardingFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/start_register"
            app:destination="@id/registerFragment"
            app:popUpTo="@id/boardingFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/start_home"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/boardingFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>